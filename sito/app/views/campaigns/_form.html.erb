<%= simple_form_for(@campaign) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :nome %>
    <%= f.input :descrizione %>
    <%= f.input :durata %>
    <%= f.input :goal %>
    <%= f.input :chiusa %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
