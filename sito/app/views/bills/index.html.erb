<h1>Lista Versamenti</h1>

<table>
  <thead>
    <tr>
      <th>Totale</th>
      <th>Id_campagna</th>
      <th>Id_utente</th>
      <th>Spesi</th>
    </tr>
  </thead>

  <tbody>
    <% @bills.each do |bill| %>
      <tr>
        <td><%= bill.totale %></td>
        <td><%= bill.campaign_id %></td>
        <td><%= bill.user_id %></td>
        <td><%= bill.spesi %></td>
        <td><%= link_to 'Mostra Versamento', bill %></td>
        <!--td><%= link_to 'Edit', edit_bill_path(bill) %></td>
        <td><%= link_to 'Destroy', bill, method: :delete, data: { confirm: 'Are you sure?' } %></td-->
      </tr>
    <% end %>
  </tbody>
</table>

